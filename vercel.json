{
  "version": 2,
  "name": "studenthub",
  "builds": [
    {
      "src": "backend/app.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/user/(.*)",
      "dest": "backend/app.js"
    },
    {
      "src": "/posts/(.*)",
      "dest": "backend/app.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "backend/app.js"
    },
    {
      "src": "/education/(.*)",
      "dest": "backend/app.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "backend/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/app.js": {
      "maxDuration": 30
    }
  }
}
