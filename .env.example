# Environment Configuration Template
# Copy this to .env and update with your actual values

# Application
NODE_ENV=production
PORT=3000

# Database
MONGO_URI=mongodb://admin:adminpassword@localhost:27017/studenthub?authSource=admin

# JWT Secret (Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-here-change-this-to-something-secure

# Cloudinary Configuration (Optional - for cloud image storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (Future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
CORS_ORIGIN=https://yourdomain.com,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@studenthub.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=System Administrator
